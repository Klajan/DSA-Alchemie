<Window x:Class="DSA_Alchemie.AddRezeptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSA_Alchemie"
        mc:Ignorable="d"
        Title="Rezept hinzufügen" Height="450" Width="800" SizeToContent="WidthAndHeight" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Left" Height="192" VerticalAlignment="Top" Width="184">
            <Border BorderBrush="Black" BorderThickness="1" Height="20" Width="58">
                <TextBlock TextWrapping="NoWrap" Text="TextBlock"/>
            </Border>
            <TextBox Height="20" TextWrapping="Wrap" Text="TextBox" Width="120"/>
        </WrapPanel>

    </Grid>
</Window>
